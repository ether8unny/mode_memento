class Player:
    def __init__(self, name):
        self.name = name
        self.location = None
        self.inventory = []
        self.status = "alive"

    def move(self, new_location):
        self.location = new_location

    def take_item(self, item):
        self.inventory.append(item)

    def drop_item(self, item):
        self.inventory.remove(item)

    def die(self):
        self.status = "dead"
